unit uDadosGlobais;

interface

uses SysUtils, Vcl.StdCtrls;

type
  TpreJogo = class(TObject)
  private

  protected

  public
    jogo_id : integer;
    descricao : string;
    odd_pre_jogo : double;
    metodo : string;
    risco_pre_jogo : double;
    data_pre_jogo : TDate;

  published

  end;

var
  mesesStr : array [1..12] of string = ('janeiro', 'fevereiro', 'março', 'abril', 'maio', 'junho', 'julho', 'agosto', 'setembro', 'outubro', 'novembro', 'dezembro');
  teste : string;

  banca : double;
  banca_atual : double;
  roi : double;
  percentual_unidade : double;
  valor_unidade : double;
  qtd_unidade : double;

  procedure tratarEdit(sender : TObject);
implementation

procedure tratarEdit(sender : TObject);
var
  i : integer;
  n, v : string;
  o : boolean;
begin
  //mascara para tratar componente edit para aceitar somente números
  n := '0123456789,';
  v := TEdit(sender).Text;

  if TEdit(Sender).Text <> '' then
    begin
      for I := 1 to High(n) do
        begin
          if n[i] = v[high(v)] then
            begin
              o := true;
            end;
        end;

     if not o then
      begin
        Delete(v, high(v), 1);
      end;

     TEdit(Sender).Text := v;
     TEdit(Sender).SelStart := length(v);
    end;
end;

{ TpreJogo }



end.
